        </div>
 <div class="col-md-9 content">
  
{% if data.shearch is defined %}
    {% for infocom in data.shearch %}
    <div class="col-md-4 col-sm-6 square-block post-block">
            <div class="inner">
                <ul class="list-unstyled">
                    <li class="post-image">
                        <img src="{{ infocom.LogoImage ? infocom.LogoImage : 'http://placehold.it/250x250&text=post+image' }}" alt="post" />
                    </li>
                    <li class="post-meta">
                        <p>
                            <span class="company-name">{{ infocom.Nm }}</span><span class="category"></span>
                        </p>
                        <p><span class="date">{{ infocom.date_created|date("d/m/Y G:i") }}</span></p>
                    </li>
                    <li>
                        <h3 class="post-title"><a href="{{ path('show_client_article', { 'articleId': infocom.C }) }}">
                            {{ infocom.Nm }}</a>
                        </h3>
                    </li>
                    <li>
                        <p class="post-description">
                            {{ infocom.Email }}
                        </p>
                    </li>
                </ul>
                        
                <footer>
                    <a href="../info/{{ infocom.C }}">more&hellip;</a>
                    <p class="pull-right">Views: {{ infocom.views }}</p>
                </footer>
            </div>
           </div>
{%endfor%}
{% endif %}
